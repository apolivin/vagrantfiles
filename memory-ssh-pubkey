Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/focal64"
  config.vm.network "private_network", ip: "192.168.33.10"
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "4096"
    vb.cpus = "4"
  end
  config.vm.provision "shell", inline: <<-SHELL
    apt-get update
    sed -i 's/^.*ChallengeResponseAuthentication.*/ChallengeResponseAuthentication no/; s/^.*PubkeyAuthentication.*/PubkeyAuthentication yes/; s/^.*PasswordAuthentication.*/PasswordAuthentication no/' /etc/ssh/sshd_config
    service ssh restart
  SHELL
end
